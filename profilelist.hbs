    <div id="have" class="col col-md-4 heading"><h3 class="display-4">Have List</h3></div>
        <div class="col col-md-4">
             <form action="/profile/has" id="update_hasform" method="post" class="form-example"> 
                <input type="hidden" name="list" id="list" value="1" readonly>
                <table class="table table-striped">
                    <tr>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Type</th>
                        <th>Year Released</th>
                        <th>Squad</th>
                        <th>Size</th>
                        <th>Date added to your collection</th>
                        <th>Date added to collectible's database</th>
                        <th>Your collection</th>
                    </tr>
                    {{#each collectionHas}}
                    <tr>
                        <td style="word-break: break-word;" width="200px"><a href="/collectible/{{{collectible_id}}}">{{{name}}}</a></td>
                        <td><img src=/collectible/image/{{{collectible_id}}}/></td>	                        
                        <td style="word-break: break-word;" width="150px">{{{typeName}}}</td>
                        <td>{{{year_released}}}</td>    
                        <td>{{{squad}}}</td>          
                        <td>{{{sizes}}}</td>                        
                        <td style="word-break: break-word;" width="150px">{{{created_at}}}</td>
                        <td style="word-break: break-word;" width="150px">{{{created_at_database}}}</td>
                        <input type="hidden" name="collectible_id[]" id="collectible_id" value="{{{collectible_id}}}" readonly>
                        <td width="700px">
                            <label for="willing_to_trade_quantity"><i class="fas fa-check"></i> :</label>
                            <input type="number" step="1" min="0" max="20"
                            name="has_quantity[]" id="q1" value="{{{has_quantity}}}" title="Qty" class="input-text qty text" size="3" pattern="(.|\s)*\S(.|\s)*" inputmode="" required>
                            <label for="willing_to_trade_quantity"><i class="fas fa-heart"></i> :</label>
                            <input type="number" step="1" min="0" max="20"
                            name="wants_quantity[]" id="q2" value="{{{wants_quantity}}}" title="Qty" class="input-text qty text" size="3" pattern="(.|\s)*\S(.|\s)*" inputmode="" required>
                            <label for="willing_to_trade_quantity"><i class='fas fa-people-arrows'></i> :</label>
                            <input type="number" step="1" min="0" max="20"
                            name="willing_to_trade_quantity[]" id="q3" value="{{{willing_to_trade_quantity}}}" title="Qty" class="input-text qty text" size="3" pattern="(.|\s)*\S(.|\s)*" inputmode="" required>
                        </td>
                    </tr>
                    {{/each}}
                </table>

                {{#if showHasButton}}
                <button type="submit" id="update_has" class="btn btn-secondary">Update collection in have list</button>
                {{else}}
                <p>You have nothing in your have list</p>
                {{/if}}
                <p>Please click "update collection" before moving on to the next page or your changes will not be saved.</p>
                <div class="pagination" id="paginationHas"></div>
            </form>
        </div>

